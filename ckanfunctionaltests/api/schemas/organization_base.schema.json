{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://github.com/alphagov/ckan-functional-tests/api/organization_base.schema.json",
  "title": "CKAN base organization representation",
  "type": "object",
  "properties": {
    "package_count": {
      "type": "integer"
    },
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "revision_id": {
      "type": "string",
      "format": "uuid"
    },
    "title": {
      "type": "string"
    },
    "created": {
      "type": "string",
      "format": "date-time"
    },
    "name": {
      "type": "string",
      "pattern": "[a-z0-9_-]"
    },
    "display_name": {
      "type": "string"
    },
    "is_organization": {
      "type": "boolean",
      "const": true
    },
    "type": {
      "type": "string",
      "const": "organization"
    },
    "groups": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "capacity": {
            "type": "string"
          }
        }
      }
    },
    "state": {
      "type": "string",
      "enum": ["active", "deleted"]
    },
    "extras": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": [
    "package_count",
    "id",
    "revision_id",
    "created",
    "display_name",
    "is_organization",
    "groups",
    "type",
    "state",
    "name",
    "title"
  ]
}
